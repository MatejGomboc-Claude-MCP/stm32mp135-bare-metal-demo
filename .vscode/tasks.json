{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "cmake",
            "command": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Clean",
            "type": "cmake",
            "command": "clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Flash to SD Card",
            "type": "shell",
            "command": "echo",
            "args": [
                "Please use STM32CubeProgrammer to flash build/stm32mp135-bare-metal.stm32 to SD card at offset 0x4400"
            ],
            "problemMatcher": [],
            "dependsOn": "Build"
        }
    ]
}
